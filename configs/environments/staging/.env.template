# Staging Environment Variables Template
# Copy this file to .env and fill in the staging values

# Database Configuration
UNET_STAGING_DB_PASSWORD=staging-password
UNET_DATABASE_URL=postgresql://unet_staging:${UNET_STAGING_DB_PASSWORD}@staging-db.internal:5432/unet_staging

# JWT Authentication
UNET_STAGING_JWT_SECRET=staging-jwt-secret-not-for-production

# TLS Certificates
UNET_TLS_CERT_FILE=/etc/tls/staging/tls.crt
UNET_TLS_KEY_FILE=/etc/tls/staging/tls.key

# Logging and Monitoring
STAGING_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/STAGING/WEBHOOK
JAEGER_ENDPOINT=http://jaeger-staging:14268/api/traces

# Vault Configuration
VAULT_TOKEN=staging-vault-token
VAULT_ADDR=https://vault-staging.internal:8200

# Redis Configuration
REDIS_URL=redis://redis-staging:6379/1
REDIS_PASSWORD=staging-redis-password

# Node Information
HOSTNAME=staging-unet-01
POD_IP=10.1.1.100

# Git Repositories
GIT_POLICIES_REPO=https://github.com/company/unet-policies.git
GIT_TEMPLATES_REPO=https://github.com/company/unet-templates.git

# SNMP Configuration
SNMP_COMMUNITY=staging

# Email Configuration (optional in staging)
SMTP_SERVER=smtp-staging.company.internal:587
ALERT_EMAIL_RECIPIENTS=dev-team@company.com