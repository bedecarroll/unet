# Development Environment Variables Template
# Copy this file to .env for local development overrides

# Database Configuration (optional - will use SQLite by default)
# UNET_DATABASE_URL=postgresql://dev_user:dev_password@localhost:5432/unet_dev

# JWT Authentication (optional - auth disabled by default in dev)
# UNET_JWT_SECRET=dev-jwt-secret

# Logging
UNET_LOG_LEVEL=debug

# Git Repositories (optional - will use local directories by default)
# GIT_POLICIES_REPO=https://github.com/company/unet-policies.git
# GIT_TEMPLATES_REPO=https://github.com/company/unet-templates.git

# Development overrides
DEV_MODE=true
DEBUG_SQL=true
DISABLE_TLS=true