# Production Environment Variables Template
# Copy this file to .env and fill in the actual values
# DO NOT commit .env files to version control

# Database Configuration
UNET_DB_PASSWORD=change-me-in-production
UNET_DATABASE_URL=postgresql://unet_prod:${UNET_DB_PASSWORD}@prod-db-cluster.internal:5432/unet_production

# JWT Authentication
UNET_JWT_SECRET=your-super-secure-jwt-secret-256-bit-minimum

# TLS Certificates (if not using cert-manager)
UNET_TLS_CERT_FILE=/etc/tls/unet/tls.crt
UNET_TLS_KEY_FILE=/etc/tls/unet/tls.key

# Logging and Monitoring
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
JAEGER_ENDPOINT=http://jaeger.observability.svc.cluster.local:14268/api/traces

# Vault Configuration
VAULT_TOKEN=your-vault-token
VAULT_ADDR=https://vault.security.svc.cluster.local:8200

# Redis Configuration
REDIS_URL=redis://redis-cluster.cache.svc.cluster.local:6379/0
REDIS_PASSWORD=your-redis-password

# Node Information (usually set by Kubernetes)
HOSTNAME=unet-pod-name
POD_IP=10.244.1.100
AWS_AVAILABILITY_ZONE=us-west-2a
INSTANCE_TYPE=m5.large

# Git Repositories
GIT_POLICIES_REPO=https://github.com/company/unet-policies-prod.git
GIT_TEMPLATES_REPO=https://github.com/company/unet-templates-prod.git
GIT_SSH_KEY_FILE=/etc/ssh/git-deploy-key

# SNMP Configuration
SNMP_COMMUNITY=prod_readonly_community

# Email Configuration
SMTP_SERVER=smtp.company.com:587
SMTP_USERNAME=unet-alerts@company.com
SMTP_PASSWORD=your-smtp-password
ALERT_EMAIL_RECIPIENTS=ops-team@company.com,on-call@company.com

# Geolocation and Security
MAXMIND_LICENSE_KEY=your-maxmind-license-key
RATE_LIMIT_REDIS_URL=${REDIS_URL}

# External Service URLs
EXTERNAL_API_HEALTH_URL=https://api.company.com/health

# Backup Configuration
BACKUP_S3_BUCKET=unet-production-backups
BACKUP_AWS_ACCESS_KEY_ID=your-backup-access-key
BACKUP_AWS_SECRET_ACCESS_KEY=your-backup-secret-key
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key